package primeirosPassos;

import static org.junit.Assert.*;

import org.junit.After;
import org.junit.Before;
import org.junit.Test;

public class AlunoTest {
	
	private Aluno a;
	int contador = 1;

	@Before
	public void setUp(){
		a = new Aluno();
	}

	@Test
	public void VerificaNumeroMatriculatest() throws Exception {
		a.setMatricula(123);
		assertEquals(123, a.getMatricula());
	}
	
	@Test (expected = IllegalArgumentException.class)
	public void verificaNumeroMatriculaNegativaTest() throws Exception{
		a.setMatricula(-123);
		a.getMatricula();
	}
	
	@After
	public void tearDown() throws Exception {
		System.out.printf("Testando...");
		contador++;
		
		if(contador == 2)	
			System.out.printf("%d testes executados",contador);
	}

}
