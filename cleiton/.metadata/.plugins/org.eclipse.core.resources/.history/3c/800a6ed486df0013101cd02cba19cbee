package romanos;

import static org.junit.Assert.assertEquals;

public class ConversorRomano {


	public String converterParaRomano(int numero) {
	        String numeroRomano = "";

	        //para até 3999
	        while(numero >= 1000) {
                numeroRomano = numeroRomano + "M";
                numero = numero - 1000;
            }
            //para números >= 900, use CM
            while(numero >= 900){
            	numeroRomano = numeroRomano + "CM";
            	numero = numero - 900;
            }
            //para números >= 500, use D
            while(numero >= 500){
            	numeroRomano += "D";
            	numero -= 500;
            }
            
            //para números >= 400, use CD
            while(numero >= 400){
            	numeroRomano = numeroRomano + "CD";
            	numero = numero - 400;
            }
            //para números >= 100, use C
            while(numero >= 100){
            	numeroRomano += "C";
            	numero -= 100;
            }
            //para números >= 90, use XC
            while(numero >= 90){
            	numeroRomano = numeroRomano + "XC";
            	numero = numero - 90;
            }
            //para números >= 50, use L
            while(numero >= 50){
            	numeroRomano = numeroRomano + "L";
            	numero -= 50;
            }
            //para 50 -> L
            while(numero >= 50) {
                numeroRomano += "L";
                numero -= 50;
            }
            //para 40 -> XL
            while(numero >= 40) {
                numeroRomano += "XL";
                numero -= 40;
            }
            //para 10 -> X
            while(numero >= 10) {
                numeroRomano += "X";
                numero -= 10;
            }
            //para 9 -> IX
            while(numero >= 9) {
                numeroRomano += "IX";
                numero -= 9;
            }
            //para 5 -> V
            while(numero >= 5) {
                numeroRomano += "V";
                numero -= 5;
            }
            //para 4 -> IV
            while(numero >= 4) {
                numeroRomano += "IV";
                numero -= 4;
            }
            //para 1 -> I
            while(numero >= 1) {
                numeroRomano += "I";
                numero -= 1;
            }
        
			return numeroRomano;
	   }
	
}
